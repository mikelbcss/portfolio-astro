---
//Componentes
import Layout from '../layouts/Layout.astro';
import Timeline from '../components/Timeline.astro';
import Badge from '../components/Badge.astro';
import Tag from '../components/Tag.astro';
import Section from '../components/Section.astro';
import Icon from '../components/Icon.astro';
//Traducciones
import i18n from '../utils/i18n';
//Enums
import { EXPERIENCE } from '../enums/experience';
import { PROJECTS } from '../enums/projects';
import { SOCIAL_PILLS } from '../enums/social-pills';

const startDate = new Date('2021-01-01');
const currentDate = new Date();

const experienceTime = currentDate.getFullYear() - startDate.getFullYear();

const currentLocale = Astro.currentLocale;
---

<Layout
    title=`Portfolio de Mikel Barrio - Desarrollador y Programador Frontend con +${experienceTime}años de experiencia`
    description="Contacta a Mikel Barrio"
>
    <main>
        <Section id="top" class="mt-40">
            <div class="flex items-center gap-x-4">
                <h1 class="flex flex-row text-white text-5xl">
                    <strong>Hey, soy Mikel</strong>
                </h1>
                <Badge
                    bgColor="#b5ebff"
                    color="#42517f"
                    title="Trabajando en RSI"
                    link="https://linkedin.com/in/mikel-barrio-conde"
                />
            </div>
            <div class="text-xl mt-6">
                <span class="">+{experienceTime} años de experiencia.</span>
                <span class="text-yellow-100/90">Desarrollador Fronted.</span>
                <span class="opacity-80"> De Valladolid, España.</span>
                <ul class="flex flex-row mt-4 gap-x-4">
                    {
                        SOCIAL_PILLS.map(socialPill => (
                            <li>
                                <Tag title={socialPill.title} icon={socialPill.icon} link={socialPill.link} />
                            </li>
                        ))
                    }
                </ul>
            </div>
        </Section>
        <Section id="experiencia" class="mt-24">
            <h2 class="flex flex-row items-center gap-x-4 text-2xl">
                <Icon xlink="briefcase" , color="white" , size="large" />
                <strong>Experiencia laboral</strong>
            </h2>
            <Timeline class="mt-8" experience={EXPERIENCE} />
        </Section>
        <Section id="proyectos" class="mt-24">
            <h2 class="flex flex-row items-center gap-x-4 text-2xl">
                <Icon xlink="briefcase" , color="white" , size="large" />
                <strong>Proyectos</strong>
            </h2>
        </Section>
    </main>
</Layout>
